<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="1000.0" prefWidth="1500.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="cryptomessenger.desktop.infrastructure.ui.controller.MainSceneController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Username:"/>
                <TextField fx:id="usernameField" prefWidth="300.0"/>
                <Button mnemonicParsing="false" onAction="#onRegister" text="Register"/>
                <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onRefresh" text="Refresh"/>
                        <Button alignment="CENTER_RIGHT" defaultButton="true" mnemonicParsing="false"
                                onAction="#onSendMessage" text="Send Message"/>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
        <Label text="Inbox" underline="true"/>
        <TableView fx:id="inboxTable">
            <columns>
                <TableColumn editable="false" prefWidth="200.0" resizable="false" sortable="false" text="From"/>
                <TableColumn editable="false" prefWidth="200.0" resizable="false" sortable="false" text="Date"/>
                <TableColumn editable="false" prefWidth="1080.0" resizable="false" sortable="false" text="Message"/>
            </columns>
        </TableView>
        <Label layoutX="20.0" layoutY="56.0" text="Outbox" underline="true"/>
        <TableView fx:id="outboxTable" layoutX="20.0" layoutY="84.0">
            <columns>
                <TableColumn editable="false" prefWidth="200.0" resizable="false" sortable="false" text="To"/>
                <TableColumn editable="false" prefWidth="200.0" resizable="false" sortable="false" text="Date"/>
                <TableColumn editable="false" prefWidth="1080.0" resizable="false" sortable="false" text="Message"/>
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
